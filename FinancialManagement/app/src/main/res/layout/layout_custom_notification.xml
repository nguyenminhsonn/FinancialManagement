<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/yellow"
    >

    <ImageView
        android:id="@+id/download"
        android:layout_width="89dp"
        android:layout_height="56dp"
        android:layout_centerVertical="true"
        android:src="@drawable/download" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/download"
        android:layout_alignParentEnd="true"
        android:layout_toStartOf="@+id/tv_time_custom_notification"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_custom_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            style="@style/TextAppearance.Compat.Notification.Title"
            android:text="@string/app_name"/>

        <TextView
            android:id="@+id/tv_message_custom_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            style="@style/TextAppearance.Compat.Notification.Info"
            android:text="@string/app_name"/>
</LinearLayout>

    <TextView
        android:id="@+id/tv_time_custom_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textColor="#fff"
        android:layout_centerVertical="true"
        style="@style/TextAppearance.Compat.Notification.Info"
        android:text="12:23:34"/>

</RelativeLayout>